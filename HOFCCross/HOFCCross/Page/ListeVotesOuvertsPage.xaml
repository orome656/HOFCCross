<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HOFCCross.Page.ListeVotesOuvertsPage">
  <ListView ItemsSource="{Binding OpenedVotes}" x:Name="ListView">
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <StackLayout
            Orientation="Horizontal">
            <Label VerticalTextAlignment="Center" Text="{Binding Equipe1}"></Label>
            <Label VerticalTextAlignment="Center" Text=" - "></Label>
            <Label VerticalTextAlignment="Center" Text="{Binding Equipe2}"></Label>
            <Button Text="Voter" Clicked="VoteClick"/>
          </StackLayout>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:HOFCCross.Controls"
             xmlns:fe="clr-namespace:FreshEssentials;assembly=FreshEssentials"
             x:Class="HOFCCross.Page.ActuPage"
             BackgroundColor="#cccccc"
             Title="Actualités">
  <ContentPage.ToolbarItems>
    <ToolbarItem Name="Sync"
                 Order="Primary"
                 Priority="0"
                 Icon="ic_sync_black_24dp_2x.png"
                 Command="{Binding RefreshCommand}"/>
  </ContentPage.ToolbarItems>
  <StackLayout>
    <ListView  x:Name="listActus" 
              ItemsSource="{Binding Actus}" 
              HasUnevenRows="True" 
              SeparatorVisibility="None" 
              fe:ListViewItemTappedAttached.Command="{Binding ItemTapCommand}"
              IsPullToRefreshEnabled="True"
              IsRefreshing="{Binding IsLoading}"
              RefreshCommand="{Binding RefreshCommand}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <controls:CardView Title="{Binding Title}" Detail="{Binding Detail}" ImageUrl="{Binding ImageUrl}" Date="{Binding Date}"/>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>
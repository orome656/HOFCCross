<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HOFCCross.Page.CalendrierPage"
             Title="Calendrier"
             ItemsSource="{Binding Matchs}">
  <TabbedPage.ItemTemplate>
    <DataTemplate>
      <ContentPage Title="{Binding Key}">
        <ListView ItemsSource="{Binding Value}">
          <ListView.ItemTemplate>
            <DataTemplate>
              <TextCell Text="{Binding Equipe1}"></TextCell>
            </DataTemplate>
          </ListView.ItemTemplate>
        </ListView>
      </ContentPage>
    </DataTemplate>
  </TabbedPage.ItemTemplate>
</TabbedPage>
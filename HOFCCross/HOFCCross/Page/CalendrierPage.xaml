<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="HOFCCross.Page.CalendrierPage"
            xmlns:controls="clr-namespace:HOFCCross.Controls"
            xmlns:local="clr-namespace:HOFCCross.Behaviors"
            Title="Calendrier">
  <ListView ItemsSource="{Binding Matchs}" HasUnevenRows="True">
    <ListView.ItemTemplate>
      <DataTemplate>
        <controls:Match Equipe1="{Binding Equipe1}" Equipe2="{Binding Equipe2}" Message="{Binding ScoreMessage}" Date="{Binding Date}"/>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
  <ContentPage.Behaviors>
    <local:ToolbarItemsBehavior ItemsSource="{Binding Equipes}"/>
  </ContentPage.Behaviors>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HOFCCross.Page.ClassementPage"
            Title="Classement"
            ItemsSource="{Binding Classements}">
  <TabbedPage.ItemTemplate>
    <DataTemplate>
      <ContentPage Title="{Binding Key}">
        <ListView ItemsSource="{Binding Value}">
          <ListView.ItemTemplate>
            <DataTemplate>
              <TextCell Text="{Binding Nom}"></TextCell>
            </DataTemplate>
          </ListView.ItemTemplate>
        </ListView>
      </ContentPage>
    </DataTemplate>
  </TabbedPage.ItemTemplate>
</TabbedPage>
